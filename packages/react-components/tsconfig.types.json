{
    // Unfortunately, the include and outDir options can’t be hoisted in the root config because they are resolved relatively to the config they’re in.
  "extends": "../../tsconfig",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "isolatedModules": false,
    "noEmit": false,
    "allowJs": false,
    "emitDeclarationOnly": true
  },
  "include": [
    "src/**/*",
    "../../typings/*"
  ]
}

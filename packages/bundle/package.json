{
    "name": "@sharegate/orbit-ui",
    "version": "34.1.1",
    "description": "Orbit design system",
    "repository": "https://github.com/gsoft-inc/sg-orbit.git",
    "author": "Groupe ShareGate inc.",
    "license": "Apache-2.0",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "style": "dist/index.css",
    "files": [
        "/dist",
        "!/dist/**/docs/*",
        "!/dist/**/tests/*",
        "index.css"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "prebuild": "yarn clean",
        "build": "run-s build:* copy-files",
        "build:js": "tsc --build ./tsconfig.build.json",
        "copy-files": "copyfiles -u 1 \"src/**/*.css\" dist",
        "clean": "rimraf dist tsconfig.build.tsbuildinfo"
    },
    "peerDependencies": {
        "react": "*",
        "react-dom": "*"
    },
    "dependencies": {
        "@orbit-ui/components": "14.2.0",
        "@orbit-ui/css": "2.1.2",
        "@orbit-ui/icons": "12.1.1"
    }
}

{
    "name": "@orbit-ui/styles",
    "version": "0.1.0",
    "description": "ShareGate Orbit styles",
    "repository": "https://github.com/gsoft-inc/sg-orbit.git",
    "author": "Groupe Sharegate inc.",
    "license": "Apache-2.0",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "style": "dist/index.css",
    "files": [
        "/dist",
        "!/dist/**/docs/*",
        "!/dist/**/tests/*"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "setup": "yarn create-dist",
        "start": "yarn watch",
        "prebuild": "yarn clean",
        "build": "run-s build:*",
        "postbuild": "yarn copy-fonts-to-dist",
        "build:types": "tsc --build ./tsconfig.build.json",
        "build:js": "babel src -d dist --config-file ./babel.config.js --extensions .ts,.tsx ",
        "build:css": "sass src/index.scss:dist/index.css src/font/index.scss:dist/font.css src/pseudos/index.scss:dist/pseudos.css --no-source-map",
        "prewatch": "yarn clean && yarn copy-fonts-to-dist",
        "watch": "run-p watch:*",
        "watch:js": "yarn build:js --watch",
        "watch:css": "yarn build:css --watch",
        "clean": "run-p clear-dist clear-ts-cache",
        "prepublishOnly": "yarn copy-license-to-dist",
        "clear-dist": "node scripts/clear-dist",
        "create-dist": "node scripts/create-dist",
        "clear-ts-cache": "yarn rimraf *.tsbuildinfo",
        "copy-fonts-to-dist": "node scripts/copy-fonts-to-dist",
        "copy-license-to-dist": "node ../../scripts/copy-root-license dist"
    },
    "peerDependencies": {
        "react": "*",
        "react-dom": "*"
    },
    "dependencies": {
        "use-debounce": "7.0.0"
    }
}

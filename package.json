{
  "name": "sg-orbit",
  "version": "0.0.0",
  "private": true,
  "repository": "https://github.com/gsoft-inc/sg-orbit.git",
  "license": "Apache-2.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "bootstrap": "yarn bootstrap:pkg && yarn bootstrap:sb",
    "bootstrap:pkg": "yarn install-pkg && yarn setup",
    "bootstrap:sb": "yarn install-sb",
    "build": "run-s clear:ts-cache build-pkg",
    "build-pkg": "lerna run build",
    "build-sb": "cd .storybook && yarn build-sb",
    "build-docs": "cd .storybook && yarn build-docs",
    "build-sb-for-chroma": "cd .storybook && yarn build-sb-for-chroma",
    "chromatic": "cd .storybook && yarn chromatic",
    "chromatic-ci": "cd .storybook && yarn chromatic-ci",
    "typecheck": "yarn clear:ts-cache && tsc",
    "clean": "run-p -c clear:*",
    "clear:pkg": "lerna run clean --parallel",
    "clear:storybook": "cd .storybook && yarn clean",
    "clear:ts-cache": "rimraf **/*.tsbuildinfo",
    "delete-node-modules": "run-p -c delete-node-modules:* && yarn delete-root-node-modules",
    "delete-node-modules:pkg": "lerna exec --parallel -- rimraf node_modules",
    "delete-node-modules:storybook": "cd .storybook && rimraf node_modules",
    "delete-root-node-modules": "rimraf node_modules",
    "delete-yarn-lock": "run-p -c delete-yarn-lock:*",
    "delete-yarn-lock:root": "rimraf yarn.lock",
    "delete-yarn-lock:storybook": "cd .storybook && rimraf yarn.lock",
    "eslint": "eslint --ext .js,.jsx,.ts,.tsx,.mdx .",
    "eslint-fix": "eslint --ext .js,.jsx,.ts,.tsx,.mdx . --fix",
    "install-pkg": "yarn install",
    "install-sb": "cd .storybook && yarn install",
    "lint": "run-s eslint stylelint typecheck",
    "lint-ci": "yarn eslint --max-warnings=0 && yarn stylelint && yarn typecheck",
    "new-version": "lerna version --exact --no-push --loglevel verbose",
    "force-new-version": "yarn new-version --force-publish=*",
    "push-release": "node scripts/push-release",
    "publish-pkg": "lerna publish from-package --exact --loglevel verbose",
    "publish-pkg-alpha": "lerna publish --allow-branch feature/* --force-publish=* --dist-tag=alpha --no-push --exact --loglevel verbose",
    "release": "cross-env NODE_ENV=production run-s build-pkg publish-pkg",
    "release-alpha": "cross-env NODE_ENV=production run-s build-pkg publish-pkg-alpha",
    "reset": "run-s -c clean delete-yarn-lock delete-node-modules",
    "setup": "lerna run setup --parallel",
    "start": "run-s start-pkg start-sb",
    "start-docs": "run-s start-pkg start-sb-docs",
    "start-pkg": "lerna run start --parallel",
    "start-sb": "cd .storybook && yarn start-sb",
    "start-sb-no-chroma": "cd .storybook && yarn start-sb-no-chroma",
    "start-sb-for-chroma": "cd .storybook && yarn start-sb-for-chroma",
    "start-sb-docs": "cd .storybook && yarn start-docs",
    "serve-sb": "cd .storybook && yarn serve-sb",
    "serve-sb-for-chroma": "cd .storybook && yarn serve-sb-for-chroma",
    "serve-docs": "cd .storybook && yarn serve-docs",
    "stylelint": "stylelint \"**/*.css\" --allow-empty-input",
    "jest-watch": "yarn jest --watch",
    "jest-ci": "yarn jest --runInBand",
    "jest": "jest",
    "update": "run-s install-pkg install-sb",
    "diff": "lerna changed && lerna diff",
    "deploy-sb-preview": "run-s build-sb netlify-deploy-sb-preview",
    "netlify-ci-sb": "yarn bootstrap && yarn build-pkg && yarn build-sb",
    "netlify-ci-docs": "yarn bootstrap && yarn build-pkg && yarn build-docs",
    "netlify-deploy-sb-preview": "netlify deploy --dir=.storybook/dist/sb --site=4b420380-aed1-4dc6-b002-6efe7b413025 --open"
  },
  "devDependencies": {
    "@babel/cli": "7.16.8",
    "@babel/core": "7.16.7",
    "@babel/eslint-parser": "7.16.5",
    "@babel/plugin-proposal-class-properties": "7.16.7",
    "@babel/plugin-proposal-nullish-coalescing-operator": "7.16.7",
    "@babel/plugin-proposal-optional-chaining": "7.16.7",
    "@babel/plugin-transform-runtime": "7.16.8",
    "@babel/preset-env": "7.16.8",
    "@babel/preset-react": "7.16.7",
    "@babel/preset-typescript": "7.16.7",
    "@sharegate/eslint-plugin": "3.0.0",
    "@sharegate/stylelint-plugin": "1.0.1",
    "@sharegate/typescript-config": "1.1.0",
    "@storybook/addon-a11y": "6.5.13",
    "@storybook/addon-essentials": "6.5.13",
    "@storybook/react": "6.5.13 ",
    "@storybook/testing-library": "0.0.13",
    "@storybook/testing-react": "1.3.0",
    "@svgr/core": "6.2.1",
    "@svgr/webpack": "5.5.0",
    "@testing-library/dom": "^8.18.1",
    "@testing-library/jest-dom": "5.16.1",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "14.0.0",
    "@types/jest": "27.4.0",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "@types/react-is": "17.0.3",
    "@types/resize-observer-browser": "0.1.6",
    "@typescript-eslint/parser": "5.9.1",
    "babel-jest": "27.4.6",
    "babel-loader": "8.2.3",
    "babel-plugin-named-asset-import": "0.3.8",
    "browserslist": "4.19.1",
    "chalk": "4.1.2",
    "chromatic": "6.3.4",
    "cross-env": "7.0.3",
    "csstype": "*",
    "date-fns": "2.28.0",
    "eslint": "7.32.0",
    "eslint-plugin-sort-destructure-keys": "1.4.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "eslint-plugin-typescript-sort-keys": "2.1.0",
    "formik": "2.2.9",
    "identity-obj-proxy": "3.0.0",
    "jarle": "1.3.0",
    "jest": "27.4.7",
    "lerna": "4.0.0",
    "meow": "9.0.0",
    "netlify-cli": "8.6.18",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.1",
    "prism-react-renderer": "1.2.1",
    "prop-types": "15.8.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-test-renderer": "18.2.0",
    "resize-observer-polyfill": "1.5.1",
    "rimraf": "3.0.2",
    "serve": "13.0.2",
    "shelljs": "0.8.5",
    "stylelint": "14.16.0",
    "svgo": "2.8.0",
    "type-fest": "2.9.0",
    "typescript": "4.5.4",
    "webpack-filter-warnings-plugin": "1.2.1"
  },
  "engines": {
    "node": ">=16"
  }
}

{
  "name": "sg-orbit",
  "version": "0.0.0",
  "private": true,
  "repository": "https://github.com/gsoft-inc/sg-orbit.git",
  "license": "Apache-2.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "lerna run build",
    "start": "run-s start-pkg start-storybook",
    "start-pkg": "lerna run start --parallel",
    "clean": "run-p -c clean:*",
    "clean:pkg": "lerna run clean --parallel",
    "clean:storybook": "rimraf storybook-static",
    "reset": "yarn clean && rimraf node_modules yarn.lock",
    "lint": "yarn lint:eslint && yarn lint:style && yarn typecheck",
    "lint:ci": "yarn lint:eslint --max-warnings=0 && yarn lint:style",
    "lint:eslint": "eslint --ext .js,.jsx,.ts,.tsx,.mdx . --cache",
    "lint:style": "stylelint \"**/*.css\" --allow-empty-input --cache",
    "typecheck": "tsc",
    "test": "jest",

    "new-version": "lerna version --exact --no-push --loglevel verbose",
    "force-new-version": "yarn new-version --force-publish=*",
    "push-release": "node scripts/push-release",
    "publish-pkg": "lerna publish from-package --exact --loglevel verbose",
    "publish-pkg-alpha": "lerna publish --allow-branch feature/* --force-publish=* --dist-tag=alpha --no-push --exact --loglevel verbose",
    "release": "cross-env NODE_ENV=production run-s build-pkg publish-pkg",
    "release-alpha": "cross-env NODE_ENV=production run-s build-pkg publish-pkg-alpha",
    "diff": "lerna changed && lerna diff",

    "netlify:build-storybook": "yarn && yarn build && yarn build:storybook",
    "netlify:build-docs": "yarn && yarn build && yarn build:storybook-docs",
    "netlify:deploy-storybook-preview": "yarn && yarn build && yarn build:storybook && netlify deploy --dir=storybook-static/sb --site=4b420380-aed1-4dc6-b002-6efe7b413025 --open",
    "storybook":"start-storybook -p 9009",
    "storybook:chroma": "cross-env STORYBOOK_IS_CHROMATIC=true yarn storybook",
    "storybook:docs": "cross-env STORYBOOK_IS_DOCS_SITE=true start-storybook -p 9010 --docs",
    "storybook:no-chroma": "cross-env STORYBOOK_INCLUDE_CHROMATIC=false yarn storybook",
    "build:storybook": "build-storybook -o dist/sb",
    "build:storybook-chroma": "cross-env STORYBOOK_IS_CHROMATIC=true build-storybook -o storybook-static/chromatic",
    "build:storybook-docs": "cross-env STORYBOOK_IS_DOCS_SITE=true build-storybook -o storybook-static/docs --docs",
    "serve:storybook": "serve storybook-static/sb",
    "serve:storybook-chroma": "serve storybook-static/chromatic",
    "serve:storybook-docs": "serve storybook-static/docs",
    "chromatic": "chromatic -b=build-sb-for-chroma --debug",
    "chromatic-ci": "chromatic -b=build-sb-for-chroma --no-interactive"
  },
  "devDependencies": {
    "@babel/cli": "7.16.8",
    "@babel/core": "7.16.7",
    "@babel/eslint-parser": "7.16.5",
    "@babel/plugin-proposal-class-properties": "7.16.7",
    "@babel/plugin-proposal-nullish-coalescing-operator": "7.16.7",
    "@babel/plugin-proposal-optional-chaining": "7.16.7",
    "@babel/plugin-transform-runtime": "7.16.8",
    "@babel/preset-env": "7.16.8",
    "@babel/preset-react": "7.16.7",
    "@babel/preset-typescript": "7.16.7",
    "@sharegate/eslint-plugin": "3.0.0",
    "@sharegate/stylelint-plugin": "1.0.1",
    "@sharegate/typescript-config": "1.1.0",
    "@storybook/addon-a11y": "6.5.13",
    "@storybook/addon-essentials": "6.5.13",
    "@storybook/react": "6.5.13 ",
    "@storybook/testing-library": "0.0.13",
    "@storybook/testing-react": "1.3.0",
    "@svgr/core": "6.2.1",
    "@svgr/webpack": "5.5.0",
    "@testing-library/dom": "^8.18.1",
    "@testing-library/jest-dom": "5.16.1",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "14.0.0",
    "@types/jest": "27.4.0",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "@types/react-is": "17.0.3",
    "@types/resize-observer-browser": "0.1.6",
    "@typescript-eslint/parser": "5.9.1",
    "babel-jest": "27.4.6",
    "babel-loader": "8.2.3",
    "babel-plugin-named-asset-import": "0.3.8",
    "browserslist": "4.19.1",
    "chalk": "4.1.2",
    "chromatic": "6.3.4",
    "cross-env": "7.0.3",
    "csstype": "*",
    "date-fns": "2.28.0",
    "eslint": "7.32.0",
    "eslint-plugin-sort-destructure-keys": "1.4.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "eslint-plugin-typescript-sort-keys": "2.1.0",
    "formik": "2.2.9",
    "identity-obj-proxy": "3.0.0",
    "jarle": "1.3.0",
    "jest": "27.4.7",
    "lerna": "4.0.0",
    "meow": "9.0.0",
    "netlify-cli": "8.6.18",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.1",
    "prism-react-renderer": "1.2.1",
    "prop-types": "15.8.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-test-renderer": "18.2.0",
    "resize-observer-polyfill": "1.5.1",
    "rimraf": "3.0.2",
    "serve": "13.0.2",
    "shelljs": "0.8.5",
    "stylelint": "14.16.0",
    "svgo": "2.8.0",
    "type-fest": "2.9.0",
    "typescript": "4.5.4",
    "webpack-filter-warnings-plugin": "1.2.1"
  },
  "engines": {
    "node": ">=16"
  }
}
